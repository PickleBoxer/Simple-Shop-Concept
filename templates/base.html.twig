<!DOCTYPE html>
<html lang="en" class="h-100">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>‚ö´Ô∏è</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

	</head>
	<body class="d-flex flex-column h-100">
		{% block header %}
			<header class="p-3 mb-3">
				<nav class="container">
					<div class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4">
						<a href="{{ path('homepage') }}" class="navbar-brand me-4">
							<span class="fs-4">üìö Simple store</span>
						</a>

						<ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
							<li>
								<a href="{{ path('admin') }}" class="nav-link px-2 link-dark">Back Office</a>
							</li>
							<li>
								<a href="#" class="nav-link px-2 link-dark">Products</a>
							</li>
							{% for category in categories %}
								<li>
									<a class="nav-link px-2 link-dark" href="{{ path('category', { slug: category.slug }) }}">{{ category }}</a>
								</li>
							{% endfor %}
						</ul>

						{% if is_granted('ROLE_USER') %}
							<div class="dropdown text-end">
								<a href="#" class="d-block link-dark text-decoration-none dropdown-toggle show" data-bs-toggle="dropdown" aria-expanded="true">
									<img src="https://github.com/mdo.png" alt="mdo" width="32" height="32" class="rounded-circle">
								</a>
								<ul class="dropdown-menu text-small" style="position: absolute; inset: 0px auto auto 0px; margin: 0px; transform: translate(0px, 34px);" data-popper-placement="bottom-start">
									<li>
										<a class="dropdown-item" href="#">New project...</a>
									</li>
									<li>
										<a class="dropdown-item" href="#">Settings</a>
									</li>
									<li>
										<a class="dropdown-item" href="#">Profile</a>
									</li>
									<li><hr class="dropdown-divider"></li>
									<li>
										<a class="dropdown-item" href="{{ path('user_logout') }}">Sign out</a>
									</li>
								</ul>
							</div>
						{% else %}
							<div class="col-md-3 text-end">
								<a href="{{ path('user_login') }}" type="button" class="btn btn-outline-primary me-2">Login</a>
								<a href="{{ path('user_register') }}" type="button" class="btn btn-warning">Sign-up</a>
							</div>
						{% endif %}
					</div>
				</nav>
			</header>
		{% endblock %}

		<main class="w-100 m-auto"> {% block body %}{% endblock %}
			</main>

			<footer class="footer mt-auto py-3 bg-light text-center">
				<div class="container">
					<span class="text-muted">‚ú® ¬© 2023 Simple Shop based on the Symfony framework ‚ú®</span>
				</div>
			</footer>

			{% block javascripts %}
				{{ encore_entry_script_tags('app') }}
			{% endblock %}
		</body>
	</html>
